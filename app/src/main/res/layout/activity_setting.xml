<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="#eeeeee"
    >

    <Button
        android:id="@+id/profileButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:text="Profile"
        android:onClick="profile"
        android:background="#FFFFFF"
        android:layout_marginTop="10sp"
        />
    <Button
        android:id="@+id/hesapButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:text="Hesap"
        android:onClick="hesap"
        android:background="#FFFFFF"
        android:layout_marginTop="1sp"
        />


    <Button
        android:id="@+id/sohbetButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:text="Sohbetler"
        android:onClick="sohbet"
        android:background="#FFFFFF"
        android:layout_marginTop="1sp"/>

    <Button
        android:id="@+id/bildirimlerButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:text="Bildirimler"
        android:onClick="bildirim"
        android:background="#FFFFFF"
        android:layout_marginTop="1sp"/>

    <Button
        android:id="@+id/veriButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:text="Veri depolama ve kullanımı"
        android:onClick="veri"
        android:background="#FFFFFF"
        android:layout_marginTop="1sp"/>

    <Button
        android:id="@+id/yardim"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:text="Yardım"
        android:onClick="yardim"
        android:background="#FFFFFF"
        android:layout_marginTop="1sp"/>


</android.support.v7.widget.LinearLayoutCompat>